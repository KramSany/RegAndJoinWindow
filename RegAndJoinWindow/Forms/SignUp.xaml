<Window x:Class="RegAndJoinWindow.Forms.SignUp" WindowStyle="None"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegAndJoinWindow.Forms"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner"
        Title="SignUp" Height="290" Width="250">
    <StackPanel>
        <Label Content="Login" HorizontalAlignment="Center" FontSize="18"></Label>
        <TextBox x:Name="Login_TB" Background="White" Height="30"></TextBox>
        <Label Content="Password" HorizontalAlignment="Center" FontSize="18"></Label>
        <TextBox x:Name="passwordTB" Height="30" TextChanged="passwordTB_TextChanged" MouseEnter="passwordTB_MouseEnter"></TextBox>
        <Button Height="30" Content="Sign Up" FontSize="18" Click="Register_Click"></Button>
        <Label Content="Сложность пароля" HorizontalAlignment="Center" FontSize="18"></Label>
        <ProgressBar x:Name="progressBar" Height="21" Width="165" Minimum="0" Maximum="5" Value="0"/>
        <Label Content="Сделайте сложный пароль!" x:Name="levelPassLabel" HorizontalAlignment="Center" FontSize="18"></Label>
    </StackPanel>
</Window>
